{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Unit Tests",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/doom_rl_tests",
      "args": [],
      "cwd": "${workspaceFolder}/build"
    },
    {
      "name": "Python Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "args": [
        "--model",
        "./runs/doom_vae_1_1666223882/doom_vae_9500000.chkpt"
      ],
      "cwd": "${fileDirname}",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: Doom PPO",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "args": [
        //"--model",
        //"./runs/VizdoomCorridor-D2/VizdoomCorridor-v0-lstm4096-1024-dropout0.2-sd_conv-60x80-smrtas-labelbuf/doom_ppo_agent_1600000.chkpt"
        /*
        //"--map",
        //"E1M2",
        "--num-steps",
        "512",
        "--num-envs",
        "1",
        "--num-minibatches",
        "1",
        "--conv-channels",
        "32,64,128",
        "--clip-reward",
        "False",
        "--use-labels-buffer",
        "False"
        */
      ],
      "cwd": "${fileDirname}",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Attach to DoomRL",
      "type": "cppdbg",
      "request": "attach",
      "program": "${workspaceFolder}/build/doom_rl",
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "DoomRL Debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/doom_rl",
      "args": [
        "--epsilon",
        "0.62",
        "--map",
        "E1M2",
        "--explore_steps",
        "5000",
        "--save_steps",
        "50000",
        "--lr",
        "0.01",
        "--min_lr",
        "0.008",
        "--max_lr",
        "0.08",
        "--checkpoint",
        "./checkpoints/2022-09-09T23-33-03/network_v4-0_save_4.chkpt"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Dynamic Python: File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "justMyCode": true
    }
  ]
}