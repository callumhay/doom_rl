{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Unit Tests",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/doom_rl_tests",
      "args": [],
      "cwd": "${workspaceFolder}/build"
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "args": [
        "--map",
        "E1M1",
        //"--model",
        //"./checkpoints/doom_model_900000.chkpt",
        "--episode_max_steps",
        "10000",
        "--epsilon",
        "1.0",
        "--explore_steps",
        "100000",
        "--save_steps",
        "100000",
        "--num_episodes",
        "1000000"
      ],
      "cwd": "${fileDirname}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Attach to DoomRL",
      "type": "cppdbg",
      "request": "attach",
      "program": "${workspaceFolder}/build/doom_rl",
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "DoomRL Debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/doom_rl",
      "args": [
        "--epsilon",
        "0.62",
        "--map",
        "E1M2",
        "--explore_steps",
        "5000",
        "--save_steps",
        "50000",
        "--lr",
        "0.01",
        "--min_lr",
        "0.008",
        "--max_lr",
        "0.08",
        "--checkpoint",
        "./checkpoints/2022-09-09T23-33-03/network_v4-0_save_4.chkpt"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    }
  ]
}